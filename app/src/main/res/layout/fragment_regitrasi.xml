<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".RegitrasiFragment">

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mblack"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/register"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:paddingStart="25dp"
        android:fontFamily="@font/msemibold"
        android:hint="Username"
        android:textSize="12dp"
        android:textAlignment="textStart" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:paddingStart="25dp"
        android:fontFamily="@font/msemibold"
        android:hint="Email"
        android:textSize="12dp"
        android:textAlignment="textStart"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:paddingStart="25dp"
        android:fontFamily="@font/msemibold"
        android:hint="Phone"
        android:textSize="12dp"
        android:textAlignment="textStart"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/phone"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:paddingStart="25dp"
        android:fontFamily="@font/msemibold"
        android:hint="Password"
        android:textSize="12dp"
        android:textAlignment="textStart"/>

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="By checking the box you agree to our Terms and Conditions."
        android:textSize="11dp"
        android:textColor="#4A4949"
        android:paddingStart="7dp"
        android:buttonTint="@color/material_dynamic_neutral80"/>

    <Button
        android:id="@+id/register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register2"
        android:fontFamily="@font/mblack"
        android:layout_marginTop="50dp"
        android:text="Register"
        android:textColor="@color/white" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/asking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginStart="5dp"
            android:textColor="#525BFF"/>
    </LinearLayout>

</LinearLayout>